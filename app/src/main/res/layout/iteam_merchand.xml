<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <ImageView
            android:id="@+id/img_merchant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/foody" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img_merchant"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/backgroud"
            android:orientation="vertical"
            android:padding="8dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/img_logo_merchant"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/logo_items"
                    android:layout_marginRight="10dp"
                    app:civ_border_color="#FF000000"
                    app:civ_border_width="2dp" />

                <TextView
                    android:id="@+id/txt_name_merchant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/img_logo_merchant"
                    android:text="ABC"
                    android:layout_alignTop="@+id/img_logo_merchant"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/img_logo_merchant"
                    android:layout_alignBottom="@id/img_logo_merchant"
                    android:orientation="horizontal"
                    android:id="@+id/linearLayout">
                    <TextView
                        android:id="@+id/txt_tonghoadon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#HoChiMinh"
                        android:textColor="#FFFFFF"
                        android:textSize="10dp" />
                    <TextView
                        android:id="@+id/txt_number_merchant"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#10%"
                        android:layout_marginLeft="20dp"
                        android:textColor="#FFFFFF"
                        android:textSize="10dp" />
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>